<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior = "@string/appbar_scrolling_view_behavior"
    xmlns:fresco = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/edit_item_layout"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/admin_edit_imageView_id"
                fresco:layout_constraintTop_toTopOf="parent"
                fresco:layout_constraintLeft_toLeftOf="parent"
                fresco:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="8dp"
                fresco:actualImageScaleType = "focusCrop"
                android:background="@drawable/image_border"
                fresco:fadeDuration = "300"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle = "true"
                fresco:roundingBorderColor = "@color/colorPrimaryDark"
                fresco:roundingBorderWidth = "1dp"
                android:layout_width="120dp"
                android:layout_height="120dp"/>

<!--Course Name-->
            <com.google.android.material.textfield.TextInputLayout
                app:layout_constraintTop_toTopOf="@+id/admin_edit_imageView_id"
                app:layout_constraintLeft_toRightOf="@+id/admin_edit_imageView_id"
                fresco:hintEnabled="true"
                android:layout_margin="8dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/admin_edit_courseName_id"
                    android:hint="Course Name"
                    android:singleLine="true"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


<!--Lecturer-->
        <com.google.android.material.textfield.TextInputLayout
            android:background="@color/edit_item_layout"
            android:layout_marginTop="4dp"
            fresco:hintEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/admin_edit_lecturerEng_id"
                android:hint="Lecturer"
                android:singleLine="true"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

<!--Link-->
        <com.google.android.material.textfield.TextInputLayout
            android:background="@color/edit_item_layout"
            android:layout_marginTop="4dp"
            fresco:hintEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/admin_edit_Link_id"
                android:hint="Link"
                android:singleLine="true"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


<!--GroupName Eng-->
        <com.google.android.material.textfield.TextInputLayout
            android:background="@color/edit_item_layout"
            android:layout_marginTop="4dp"
            fresco:hintEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/admin_edit_groupNameEng_id"
                android:hint="Group Name"
                android:singleLine="true"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


<!--GroupName Arm-->
        <com.google.android.material.textfield.TextInputLayout
            android:background="@color/edit_item_layout"
            android:layout_marginTop="4dp"
            fresco:hintEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/admin_edit_groupNameArm_id"
                android:hint="Խմբի անուն"
                android:singleLine="true"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:background="@color/edit_item_layout"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Group Type:"
                android:textSize="18sp"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

<!--Radio Group-->
            <RadioGroup
                android:id="@+id/admin_edit_radioGroup_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/admin_edit_radio_0"
                    android:scaleX="1.0"
                    android:scaleY="1.0"
                    android:textSize="18sp"
                    android:text="For Beginners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/admin_edit_radio_1"
                    android:scaleX="1.0"
                    android:scaleY="1.0"
                    android:textSize="18sp"
                    android:text="Specialized"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/admin_edit_radio_2"
                    android:scaleX="1.0"
                    android:scaleY="1.0"
                    android:textSize="18sp"
                    android:text="Advanced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RadioGroup>


        </LinearLayout>


<!--Description Eng-->
        <com.google.android.material.textfield.TextInputLayout
            android:background="@color/edit_item_layout"
            android:layout_marginTop="4dp"
            fresco:hintEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/admin_edit_DescriptionEng_id"
                android:hint="Description"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

<!--Description Arm-->
        <com.google.android.material.textfield.TextInputLayout
            android:background="@color/edit_item_layout"
            android:layout_marginTop="4dp"
            fresco:hintEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/admin_edit_DescriptionArm_id"
                android:hint="Նկարագրություն"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>





</ScrollView>