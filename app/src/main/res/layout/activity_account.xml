<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    android:background="@drawable/shapeforloginlayout"
    android:gravity="center"
    android:orientation="vertical">
   <!-- <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvImage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        />-->
    <ImageView
        android:id="@+id/studentImageFromGoogle"
        android:layout_width="180dp"
        android:layout_height="180dp">

    </ImageView>


    <TextView
        android:id="@+id/textViewStudentNameAndFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi! "
        android:textSize="30dp"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/textViewStudentEmailFromGoogleAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email:"
        android:textSize="30dp"
        android:textColor="#fff">

    </TextView>

 <com.airbnb.lottie.LottieAnimationView
     android:id="@+id/animation_view"
     android:layout_width="100dp"
     android:layout_height="100dp"
      app:lottie_autoPlay="true"

     app:lottie_fileName="check-mark-success.json"
           >

 </com.airbnb.lottie.LottieAnimationView>
 <Button
        android:id="@+id/btnLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_out"
        android:background="@drawable/btn_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

</LinearLayout>