<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/notifications_switch_TV_settings_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="24dp"
        android:layout_marginLeft="8dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/notification_switch_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:checked="true"
        android:layout_marginTop="2dp"
        android:switchMinWidth="56dp"
        android:switchPadding="150dp"
        android:textOff="OFF"
        android:textOn="ON"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/notifications_switch_TV_settings_id"
        app:layout_constraintBottom_toBottomOf="@id/notifications_switch_TV_settings_id"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/notification_on_off_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF/ON"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@id/notification_switch_id"
        app:layout_constraintBottom_toBottomOf="@id/notification_switch_id"
        app:layout_constraintTop_toTopOf="@id/notification_switch_id" />
    
    <View
        android:id="@+id/line_settings0"
        android:layout_margin="12dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/notifications_switch_TV_settings_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/language_settings_TV_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Language"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_settings0" />

    <ImageView
        android:id="@+id/english_flag_settings_id"
        android:background="@drawable/english_flag"
        app:layout_constraintTop_toBottomOf="@id/language_settings_TV_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/armenian_flag_settings_id"
        android:layout_width="100dp"
        android:layout_height="90dp"/>

    <ImageView
        android:id="@+id/armenian_flag_settings_id"
        app:layout_constraintTop_toBottomOf="@id/language_settings_TV_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/english_flag_settings_id"
        android:background="@drawable/armenia_flag"
        android:layout_width="100dp"
        android:layout_height="90dp"/>

    <View
        android:id="@+id/english_selector_id"
        app:layout_constraintTop_toBottomOf="@+id/english_flag_settings_id"
        app:layout_constraintLeft_toLeftOf="@+id/english_flag_settings_id"
        app:layout_constraintRight_toRightOf="@id/english_flag_settings_id"
        android:background="@android:color/transparent"
        android:layout_width="28dp"
        android:layout_height="1dp"/>
    <View
        android:id="@+id/armenian_selector_id"
        app:layout_constraintTop_toBottomOf="@+id/armenian_flag_settings_id"
        app:layout_constraintLeft_toLeftOf="@+id/armenian_flag_settings_id"
        app:layout_constraintRight_toRightOf="@id/armenian_flag_settings_id"
        android:background="@android:color/transparent"
        android:layout_width="28dp"
        android:layout_height="1dp"/>


    <TextView
        android:id="@+id/textViewNotif_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Notification"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textViewLang_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Language"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>