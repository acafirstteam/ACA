<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:fresco = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	tools:context = ".ui.fragments.SettingsFragment">

	<TextView
		android:id = "@+id/notifications_text"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "8dp"
		android:layout_marginTop = "20dp"
		android:text = "@string/notifications"
		android:textColor = "#000000"
		android:textSize = "24sp"
		app:layout_constraintLeft_toLeftOf = "parent"
		app:layout_constraintTop_toTopOf = "parent" />

	<androidx.appcompat.widget.SwitchCompat
		android:id = "@+id/notification_switch"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginEnd = "25dp"
		app:layout_constraintRight_toRightOf = "parent"
		app:layout_constraintTop_toTopOf = "@id/notifications_text" />


	<View
		android:id = "@+id/line_settings0"
		android:layout_width = "match_parent"
		android:layout_height = "1dp"
		android:layout_margin = "12dp"
		android:background = "@android:color/black"
		app:layout_constraintTop_toBottomOf = "@id/notifications_text" />

	<TextView
		android:id = "@+id/language_text"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "8dp"
		android:layout_marginTop = "18dp"
		android:text = "@string/language"
		android:textColor = "#000000"
		android:textSize = "24sp"
		app:layout_constraintLeft_toLeftOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/line_settings0" />

	<com.facebook.drawee.view.SimpleDraweeView
		android:id = "@+id/english_flag_settings_id"
		android:layout_width = "70dp"
		android:layout_height = "48dp"
		android:layout_marginTop = "12dp"
		android:layout_marginEnd = "30dp"
		app:layout_constraintRight_toLeftOf = "@id/armenian_flag_settings_id"
		app:layout_constraintTop_toBottomOf = "@id/line_settings0"
		fresco:actualImageScaleType = "centerCrop"
		fresco:backgroundImage = "@color/white"
		fresco:fadeDuration = "600"
		fresco:placeholderImage = "@drawable/english_flag"
		fresco:placeholderImageScaleType = "centerCrop"
		fresco:roundAsCircle = "true"
		fresco:roundWithOverlayColor = "@color/white"
		fresco:roundedCornerRadius = "20dp"
		fresco:roundingBorderColor = "@color/colorAccentDark"
		fresco:roundingBorderWidth = "1dp" />

	<com.facebook.drawee.view.SimpleDraweeView
		android:id = "@+id/armenian_flag_settings_id"
		android:layout_width = "70sp"
		android:layout_height = "48dp"
		android:layout_marginTop = "12dp"
		android:layout_marginEnd = "20dp"
		app:layout_constraintRight_toRightOf = "parent"
		app:layout_constraintTop_toBottomOf = "@id/line_settings0"
		fresco:actualImageScaleType = "centerCrop"
		fresco:backgroundImage = "@color/white"
		fresco:fadeDuration = "600"
		fresco:placeholderImage = "@drawable/armenia_flag"
		fresco:placeholderImageScaleType = "centerCrop"
		fresco:roundAsCircle = "true"
		fresco:roundWithOverlayColor = "@color/white"
		fresco:roundedCornerRadius = "20dp"
		fresco:roundingBorderColor = "@color/colorAccentDark"
		fresco:roundingBorderWidth = "1dp" />

	<View
		android:id = "@+id/line_settings1"
		android:layout_width = "match_parent"
		android:layout_height = "1dp"
		android:layout_margin = "12dp"
		android:background = "@android:color/black"
		app:layout_constraintTop_toBottomOf = "@id/armenian_flag_settings_id" />

	<TextView
		android:id = "@+id/animation_text"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "8dp"
		android:layout_marginTop = "20dp"
		android:text = "@string/first_anim"
		android:textColor = "#000000"
		android:textSize = "24sp"
		app:layout_constraintLeft_toLeftOf = "parent"
		app:layout_constraintTop_toBottomOf="@+id/line_settings1" />

	<androidx.appcompat.widget.SwitchCompat
		android:id = "@+id/animation_switch"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginEnd = "25dp"
		android:layout_marginTop = "20dp"
		app:layout_constraintRight_toRightOf = "parent"
		app:layout_constraintTop_toBottomOf = "@id/line_settings1" />



</androidx.constraintlayout.widget.ConstraintLayout>