<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/admin_edit_imageView_id"
            tools:background="@drawable/ic_launcher_foreground"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="140dp"
            android:layout_height="140dp"/>

        <TextView
            android:id="@+id/admin_courseName_TV_id"
            app:layout_constraintTop_toTopOf="@+id/admin_edit_imageView_id"
            app:layout_constraintLeft_toRightOf="@+id/admin_edit_imageView_id"
            android:text="Course Name:"
            android:textSize="18sp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/admin_edit_courseName_id"
            app:layout_constraintTop_toBottomOf="@+id/admin_courseName_TV_id"
            app:layout_constraintLeft_toRightOf="@+id/admin_edit_imageView_id"
            tools:text="course name"
            android:singleLine="true"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/admin_lecturer_TV_id"
            app:layout_constraintTop_toBottomOf="@+id/admin_edit_imageView_id"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="8dp"
            android:text="Lecturer:"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/admin_edit_lecturer_id"
            app:layout_constraintTop_toBottomOf="@+id/admin_lecturer_TV_id"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>