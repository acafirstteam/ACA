<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_margin="4dp"
    android:background="@color/cardview_light_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/dateTime_history_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="15/10/2019"
        android:textSize="20sp"
        android:layout_marginRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/history_item_start_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/comming_time_history_id"
        app:layout_constraintRight_toRightOf="@id/comming_time_history_id"
        android:text="@string/history_start"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/history_item_end_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/complete_time_history_id"
        app:layout_constraintRight_toRightOf="@+id/complete_time_history_id"
        android:text="@string/history_end"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/comming_time_history_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history_item_start_id"
        app:layout_constraintRight_toLeftOf="@+id/history_item_row"
        tools:text="19:00"
        android:layout_marginLeft="4dp"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/complete_time_history_id"
        app:layout_constraintTop_toBottomOf="@+id/history_item_end_id"
        app:layout_constraintLeft_toRightOf="@+id/history_item_row"
        tools:text="21:00"

        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/history_item_row"
        android:text="  -  "
        app:layout_constraintTop_toTopOf="@+id/comming_time_history_id"
        app:layout_constraintBottom_toBottomOf="@+id/comming_time_history_id"
        app:layout_constraintLeft_toRightOf="@id/comming_time_history_id"
        app:layout_constraintRight_toLeftOf="@id/complete_time_history_id"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>