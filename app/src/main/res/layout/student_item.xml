<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:focusable = "true"
        android:foreground = "?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor = "@color/colorPrimary"
        card_view:cardCornerRadius = "8dp"
        card_view:cardElevation = "4dp"
        card_view:cardUseCompatPadding = "true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf = "parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@+id/imageViewStudentItem"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textNameStudentItm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:textSize="30sp"
                    tools:text="Arsen" />

                <TextView
                    android:id="@+id/textCourseStudentItm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_school_black_24dp"
                    android:drawablePadding="8dp"
                    android:textSize="18sp"
                    tools:text="Android" />

                <TextView
                    android:id="@+id/textEmailStudentItm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="8dp"
                    android:textSize="18sp"
                    tools:text="mail.com" />

                <TextView
                    android:id="@+id/textPhoneStudentItm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="8dp"
                    android:textSize="18sp"
                    tools:text="+37498800869" />

                <TextView
                    android:id="@+id/textIdStudentItm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_perm_identity"
                    android:drawablePadding="8dp"
                    android:textSize="18sp"
                    tools:text="85873261548525" />

            </LinearLayout>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imageViewStudentItem"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                fresco:backgroundImage="@color/recyclerview_item"
                fresco:fadeDuration="300"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true"
                fresco:roundingBorderColor="@color/colorPrimaryDark" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>