<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:fresco = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	tools:context = ".AdminStudentStatus">

	<com.facebook.drawee.view.SimpleDraweeView
		android:id = "@+id/imageViewStudentItemA"
		android:layout_width = "96dp"
		android:layout_height = "96dp"
		app:layout_constraintLeft_toLeftOf = "parent"
		app:layout_constraintTop_toTopOf = "parent"
		fresco:backgroundImage = "@color/recyclerview_item"
		fresco:fadeDuration = "300"
		fresco:placeholderImage = "@mipmap/ic_launcher"
		fresco:placeholderImageScaleType = "centerCrop"
		fresco:roundAsCircle = "true"
		fresco:roundingBorderColor = "@color/colorPrimaryDark" />

	<TextView
		android:id = "@+id/textNameStudentItmA"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "10dp"
		android:layout_marginTop = "4dp"

		android:textSize = "30sp"
		app:layout_constraintLeft_toRightOf = "@+id/imageViewStudentItemA"
		app:layout_constraintRight_toRightOf = "parent"
		tools:ignore = "MissingConstraints"
		tools:text = "Arsen" />

	<TextView
		android:id = "@+id/textCourseStudentItmA"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "15dp"
		android:layout_marginTop = "4dp"
		android:drawableStart = "@drawable/ic_school_black_24dp"
		android:drawablePadding = "8dp"
		android:textSize = "18sp"
		app:layout_constraintLeft_toRightOf = "@+id/imageViewStudentItemA"
		app:layout_constraintRight_toRightOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/textNameStudentItmA"
		tools:text = "Android" />

	<TextView
		android:id = "@+id/textPhoneStudentItmA"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "15dp"
		android:layout_marginTop = "4dp"
		android:drawableStart = "@drawable/ic_phone_black_24dp"
		android:drawablePadding = "8dp"
		android:textSize = "18sp"

		app:layout_constraintLeft_toRightOf = "@+id/imageViewStudentItemA"
		app:layout_constraintRight_toRightOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/textCourseStudentItmA"
		tools:text = "+37498800869" />

	<TextView
		android:id = "@+id/textEmailStudentItmA"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "15dp"
		android:layout_marginTop = "4dp"
		android:drawableStart = "@drawable/ic_email"
		android:drawablePadding = "8dp"
		android:textSize = "18sp"
		app:layout_constraintRight_toRightOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/textPhoneStudentItmA"
		tools:text = "mail.com" />

	<TextView
		android:id = "@+id/textIdStudentItmA"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "15dp"
		android:layout_marginTop = "4dp"
		android:drawableStart = "@drawable/ic_perm_identity"
		android:drawablePadding = "8dp"
		android:textSize = "18sp"
		app:layout_constraintRight_toRightOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/textEmailStudentItmA"
		tools:text = "85873261548525" />

	<TextView
		android:id = "@+id/textForChosseStatus"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:text = "@string/choose_status_for_visitor"
		android:textSize = "24sp"
		app:layout_constraintLeft_toLeftOf = "parent"
		app:layout_constraintRight_toRightOf = "parent"

		app:layout_constraintTop_toBottomOf = "@+id/textIdStudentItmA" />

	<RadioGroup
		android:id = "@+id/RadioGroup1"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		app:layout_constraintLeft_toLeftOf = "parent"
		app:layout_constraintRight_toRightOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/textForChosseStatus"

		>

		<RadioButton
			android:id = "@+id/rbtnStudent"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:text = "@string/student" />

		<RadioButton
			android:id = "@+id/rbtnAdmin"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:text = "@string/admin_text" />

	</RadioGroup>

	<TextView
		android:id = "@+id/TextChoseLevel"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "15dp"
		android:layout_marginTop = "4dp"
		android:layout_marginEnd = "15dp"
		android:gravity = "center"
		android:text = "@string/please_choose_the_level"
		app:layout_constraintLeft_toLeftOf = "parent"
		app:layout_constraintRight_toRightOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/RadioGroup1" />

	<Spinner
		android:id = "@+id/spinner1"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginTop = "5dp"
		android:dropDownHeight = "100dp"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/TextChoseLevel" />

	<!--	<Spinner-->
	<!--		android:id = "@+id/spinner1"-->
	<!--		android:layout_width = "match_parent"-->
	<!--		android:layout_height = "wrap_content"-->
	<!--		android:layout_marginStart = "15dp"-->
	<!--		android:layout_marginTop = "8dp"-->
	<!--		android:layout_marginEnd = "15dp"-->
	<!--		app:layout_constraintEnd_toEndOf = "parent"-->
	<!--		app:layout_constraintStart_toStartOf = "parent"-->
	<!--		app:layout_constraintTop_toBottomOf = "@+id/TextChoseLevel" />-->

	<TextView
		android:id = "@+id/TextChoseCourse"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "15dp"
		android:layout_marginTop = "8dp"
		android:layout_marginEnd = "15dp"
		android:gravity = "center"
		android:text = "@string/please_choose_the_course"
		app:layout_constraintLeft_toLeftOf = "parent"
		app:layout_constraintRight_toRightOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/spinner1" />

	<Spinner
		android:id = "@+id/spinner2"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "15dp"
		android:layout_marginTop = "8dp"
		android:layout_marginEnd = "15dp"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/TextChoseCourse" />

	<Button
		android:id = "@+id/btndoneForstatus"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:background = "@android:color/transparent"
		android:text = "@string/save"
		app:layout_constraintBottom_toBottomOf = "parent"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toTopOf = "@+id/spinner2"

		/>

</androidx.constraintlayout.widget.ConstraintLayout>
